#!/sbin/runscript

depend() {
  need net
  need bitmessage
}

start() {
  ebegin "Starting bmwrapper"
  start-stop-daemon --start --user bitmessage:bitmessage --exec /usr/bin/bmwrapper --pidfile /var/run/bmwrapper.pid --background --make-pidfile
  eend $?
}

stop() {
  ebegin "Stopping bmwrapper"
  start-stop-daemon --stop --pidfile /var/run/bmwrapper.pid
  eend $?
}
